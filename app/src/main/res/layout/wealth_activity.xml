<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/ll_hat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/welth_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="我的财富" />
    </RelativeLayout>

    <View
        android:id="@+id/num_one_view"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/shop_time" />


    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="#f4f4f4" />


    <RelativeLayout
        android:id="@+id/ll_wealth"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/btn_context_menu_normal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_cf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ndf_item_coin" />


        <TextView
            android:id="@+id/tt_download_offline_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/image_cf"
            android:text="钱包"
            android:textColor="@color/black"
            android:textSize="16.0dip" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/nearby_quick_more_left_array" />


    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="30dp"
        android:background="@color/shop_time" />


    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/btn_context_menu_normal"
        android:gravity="center_vertical">

        <ImageView

            android:id="@+id/image_jb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ndf_item_coin" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_jb"
            android:layout_marginLeft="5dp"
            android:text="金币"
            android:textColor="@color/black"
            android:textSize="16.0dip" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/nearby_quick_more_left_array" />


    </RelativeLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:layout_marginLeft="30dp"
        android:background="@color/shop_time" />


    <RelativeLayout

        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/btn_context_menu_normal"
        android:gravity="center_vertical">

        <ImageView

            android:id="@+id/image_dd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ndf_item_coin" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_dd"
            android:layout_marginLeft="5dp"
            android:text="订单"
            android:textColor="@color/black"
            android:textSize="16.0dip" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/nearby_quick_more_left_array" />


    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.3dp"
        android:background="@color/shop_time" />

</LinearLayout>