<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/maplayer_manager_2d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:src="@drawable/maplayer_manager_2d"/>
        <ImageView
            android:id="@+id/maplayer_manager_sate_hl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:src="@drawable/maplayer_manager_sate_hl"/>
        <ImageView
            android:id="@+id/maplayer_manager_gj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:src="@drawable/maplayer_manager_gj"/>


    </LinearLayout>





    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="1px"
        android:background="@color/more_line_color" />


     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center_horizontal"
             android:layout_weight="1"
             android:orientation="horizontal">

             <ToggleButton
                 android:id="@+id/layer_url_button"
                 android:layout_width="30dp"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="true"
                 android:background="@android:color/transparent"
                 android:button="@drawable/czy_button_selector"
                 android:checked="true"
                 android:textOff=""
                 android:textOn="" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="路况事件"/>
         </LinearLayout>

         <LinearLayout
             android:layout_width="1dp"
             android:layout_height="match_parent"
             android:layout_marginTop="7dp"
             android:layout_marginBottom="7dp"
             android:background="@color/more_line_color">

         </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center_horizontal"
             android:layout_weight="1"
             android:orientation="horizontal">

             <ToggleButton

                 android:layout_width="30dp"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="true"
                 android:background="@android:color/transparent"
                 android:button="@drawable/czy_button_selector"
                 android:checked="false"
                 android:textOff=""
                 android:textOn="" />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="我的收藏"/>

         </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="1px"
        android:background="@color/more_line_color" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_czy_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chunzhiyun"/>
        <ImageView
            android:id="@+id/image_czy_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="27dp"
            android:src="@drawable/chun_icon"/>

        <TextView
            android:id="@+id/image_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/image_czy_1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="7dp"
            android:textSize="10sp"
            android:text="春之韵"/>

    </RelativeLayout>




    <!--<TextView
        android:id="@+id/main_tab_unread_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chunzhiyun"
        android:gravity="right|bottom"
        android:text="新消息"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="10.0dip"
        android:visibility="visible" />-->



</LinearLayout>

